#version 450
layout(local_size_x = 32, local_size_y = 1, local_size_z = 1) in;
layout(binding = 0) buffer buf_in1 {float in1[1024];};
layout(binding = 1) buffer buf_in2 {float in2[1024];};
layout(binding = 2) buffer buf_out {float res[1024];};

void main () {
  uint id = gl_GlobalInvocationID.x;
  if( id > 1024) return;
  res[id] = in1[id] + in2[id];
}